<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.peony.iview.module.ActionActivity"
    android:orientation="vertical">

    <include
        android:id="@+id/include_action_header"
        style="@style/HeaderTheme"
        layout="@layout/action_header" />

    <View
        android:id="@+id/separator"
        style="@style/SeparatorTheme" />

    <TextView
        android:text="@string/module_activity_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
